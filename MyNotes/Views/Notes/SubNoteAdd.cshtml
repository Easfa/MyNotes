@{
}
@model MyNotes.Models.SubNote
<form method="post" asp-action="SubNoteAdd">
<div class="container p-3">
    <div class="row pt-4">
        <div class="text-center">
            <div class="h4 pb-2 mb-4 text-success border-bottom border-success">
                Add Note
            </div>
        </div>
    </div>
    <div class="row pt-4">
    <div class="form-floating">
            <input asp-for="NoteName" class="form-control" placeholder="" style="height: 100px"/>
    </div>
    </div>
     @Html.Hidden("NoteId", Model.NoteId)
    <div class="row pt-4">
        <div class ="text-lg-end">
                <input type="submit" class="btn btn-info w-100" value="Create" />
        </div>
    </div>
</div>

</form>

